{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Open Context Protocol Schema",
  "description": "Defines the structure of an OCP context object.",
  "type": "object",
  "properties": {
    "context_id": {
      "type": "string",
      "description": "A unique identifier for this context instance."
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Optional metadata for this context."
    },
    "session": {
      "type": "object",
      "properties": {
        "history": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": {
                "type": "string",
                "enum": [
                  "user",
                  "assistant",
                  "system"
                ]
              },
              "message": {
                "type": "string"
              }
            },
            "required": [
              "role",
              "message"
            ]
          }
        }
      },
      "required": [
        "history"
      ],
      "description": "Encapsulates AI session history."
    },
    "expires": {
      "type": "string",
      "format": "date-time",
      "description": "An optional timestamp indicating when the context expires."
    }
  },
  "required": [
    "context_id",
    "session"
  ]
}